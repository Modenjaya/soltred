# .env

# Your existing Solana RPC and Wallet Keys
SOLANA_RPC=https://api.mainnet-beta.solana.com
PRIVATE_KEY=YOUR_BOT_PRIVATE_KEY_BASE58 # Private key for the bot's own wallet, if it needs to sign anything for internal use
PUBLIC_KEY=YOUR_BOT_PUBLIC_KEY_BASE58  # Public key for the bot's own wallet

# Bot Mode (not directly used by Telegram bot, but part of your original config)
BOT_MODE=COPY
COPY_WALLET=
TRADE_TYPE=EXACT # or SAFE
BUY_AMOUNT=0.01
TAKE_PROFIT=100 # %
STOP_LOSS=50 # %
SLIPPAGE=10 # %
JITO_TIP=0.0001 # in SOL
JITO_ENGINE=https://jito-engine.solanacopybot.com/api/v1/bundles

# Coinvera API Key (from your previous questions)
COINVERA_API=YOUR_COINVERA_API_KEY # Make sure this key supports general token prices if possible

PRICE_CHECK_DELAY=5000
PREFERRED_DEX=none # "none", "auto", "pumpfun", "jupiter", etc.

ENABLE_MULTI_BUY=false
ENABLE_TRAILING_STOP=false
TRAILING_STOP_DISTANCE=0
TRAILING_STOP_ACTIVATION=0

# NEW: Telegram Bot Token
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE # <-- GET THIS FROM BOTFATHER!
